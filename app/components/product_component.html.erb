<div class="col-12 col-md-6 col-lg-4 px-2">
  <div class="card card-product customBody">
    <%= link_to @product do %>
      <%= image_tag @product.avatar, class: "card-img-top", alt: @product.title %>
      <div class="card-body">
        <h5 class="card-title"> <%= @product.title %></h5>
    <% end %>
    <p class="card-text">
      <% if @product.description.size > 150 %>
        <%= @product.description.first(150)... %>
      <% else %>
        <%= @product.description %>
      <% end %>
    </p>
    </div>
    <div class="card-bottom">
      <%= @product.price %>
      <%= link_to "Show", @product, class: "card-link" %>
      <a href="#" class="card-link">add to card</a>
    </div>
  </div>
</div>