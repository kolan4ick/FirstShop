<div class="col-12 col-md-6 col-lg-4 px-2">
  <div class="card border-secondary card-product customBody">
    <%= link_to @product do %>
      <%= image_tag @product.avatar, class: "card-img-top", alt: @product.title %>
      <div class="card-body">
        <h5 class="card-title"> <%= @product.title %></h5>
    <% end %>
    <p class="card-text">
      <% if @product.description.size > 150 %>
        <%= @product.description.first(150)... %>
      <% else %>
        <%= @product.description %>
      <% end %>
    </p>
    </div>
    <div class="card-bottom">
      price:
      <%= @product.price %>
      <div class="btn btn-danger card-link" onclick="add_to_cart(<%= @product.id %>)">add to card</div>
    </div>
  </div>
</div>